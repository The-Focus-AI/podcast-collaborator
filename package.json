{
  "name": "podcast-collaborator",
  "version": "1.0.0",
  "description": "A terminal-based Pocketcast client with AI-powered features",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "podcast-collaborator": "./dist/index.js",
    "podcast-cli": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write src tests",
    "prepack": "pnpm run build"
  },
  "keywords": [
    "podcast",
    "cli",
    "terminal",
    "pocketcasts",
    "ai",
    "transcription"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.6.1",
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@testing-library/react": "^14.2.1",
    "@types/chalk": "^2.2.4",
    "@types/commander": "^2.12.5",
    "@types/node": "^22.13.14",
    "@types/react": "^18.2.64",
    "@types/turndown": "^5.0.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/ui": "^3.0.9",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.5",
    "@google/genai": "^0.7.0",
    "@types/yargs": "^17.0.33",
    "ai": "^4.2.2",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "html-to-md": "^0.8.7",
    "ink": "^5.2.0",
    "ora": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "turndown": "^7.2.0",
    "uuid": "^11.1.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  }
}
